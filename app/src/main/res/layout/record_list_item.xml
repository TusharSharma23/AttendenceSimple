<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/item_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/sub_left_margin"
        android:layout_marginTop="@dimen/not_attended_right_margin"
        android:layout_marginBottom="@dimen/not_attended_right_margin"/>
    <TextView
        android:id="@+id/item_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/sub_left_margin"
        android:layout_marginTop="@dimen/not_attended_right_margin"
        android:layout_marginBottom="@dimen/not_attended_right_margin"
        tools:ignore="RelativeOverlap" />

</RelativeLayout>